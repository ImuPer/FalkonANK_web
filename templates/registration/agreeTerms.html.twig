        {{ 'terms_and_conditions.platform_responsibility'|trans }}
    </p>

    <h2>9. {{ 'terms_and_conditions.data_protection'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.data_protection_description'|trans }}
        <a href="{{ path('privacy_policy') }}"><strong>{{ 'terms_and_conditions.privacy_policy'|trans }}</strong></a> {{ 'terms_and_conditions.for_more'|trans }}.
    </p>

    <h2>10. {{ 'terms_and_conditions.terms_changes'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.right_to_change'|trans }}
    </p>

    <h2>11. {{ 'terms_and_conditions.contact'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.contact_info'|trans }} <br>
        📧 <a href="mailto:falkon674@gmail.com">falkon674@gmail.com</a>
    </p>

    <div class="alert alert-success mt-4" role="alert">
        {{ 'terms_and_conditions.acceptance_alert'|trans }}<br>
        <strong>{{ 'terms_and_conditions.thank_you'|trans }} </strong>
    </div>
</div>
{% endblock %}
