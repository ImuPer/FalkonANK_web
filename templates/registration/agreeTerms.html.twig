        <li>{{ 'terms_and_conditions.online_payment'|trans }}</li>
        <li>{{ 'terms_and_conditions.delivery_or_pickup'|trans }}</li>
    </ol>

    <h2>4. {{ 'terms_and_conditions.platform_role'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.platform_intermediary'|trans }}
    </p>

    <h2>5. {{ 'terms_and_conditions.user_commitments'|trans }}</h2>
    <ul>
        <li>{{ 'terms_and_conditions.honest_use'|trans }}</li>
        <li>{{ 'terms_and_conditions.no_fraud'|trans }}</li>
        <li>{{ 'terms_and_conditions.respect_others'|trans }}</li>
    </ul>

    <h2>6. {{ 'terms_and_conditions.payment_and_security'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.payment_security'|trans }}
    </p>

    <h2>7. {{ 'terms_and_conditions.delivery'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.delivery_method'|trans }}
    </p>

    <h2>8. {{ 'terms_and_conditions.responsibility'|trans }}</h2>
