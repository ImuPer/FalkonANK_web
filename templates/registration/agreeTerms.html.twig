{% trans_default_domain 'messages' %}

{% block title %}{{ 'terms_and_conditions.title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h1 class="mb-4">📝 {{ 'terms_and_conditions.heading'|trans }}</h1>
    <p><strong>{{ 'terms_and_conditions.last_update'|trans }}:</strong> 19 de maio de 2025</p>

    <hr>

    <h2>1. {{ 'terms_and_conditions.platform_goal'|trans }}</h2>
    <p>
        {{ 'terms_and_conditions.platform_goal_description'|trans }}
    </p>

    <h2>2. {{ 'terms_and_conditions.access'|trans }}</h2>
    <ul>
        <li>{{ 'terms_and_conditions.free_registration'|trans }}</li>
        <li>{{ 'terms_and_conditions.acceptance'|trans }}</li>
        <li>{{ 'terms_and_conditions.correct_information'|trans }}</li>
    </ul>

    <h2>3. {{ 'terms_and_conditions.order_process'|trans }}</h2>
