{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user_delete.title'|trans }}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h2 class="card-title text-center text-danger mb-4">
                        {{ 'user_delete.heading'|trans }}
                    </h2>

                    {% if isMerchant %}
                        <div class="alert alert-warning text-center" role="alert">
                            ⚠️ {{ 'user_delete.merchant_warning'|trans }}
                        </div>
                    {% else %}
                        <p class="text-center fs-5">
                            {{ 'user_delete.confirm_text'|trans }}
                        </p>
                    {% endif %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form method="POST"
                          action="{{ path('app_user_deleteConf', {'id': user.id}) }}"
                          class="d-flex flex-column align-items-center">

                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

                        <div class="mb-3 w-100">
                            <label for="reason" class="form-label">
                                {{ 'user_delete.reason_label'|trans }}
                            </label>
                            <textarea class="form-control"
                                      id="reason"
                                      name="reason"
                                      rows="4"
                                      placeholder="{{ 'user_delete.reason_placeholder'|trans }}"></textarea>
                        </div>

                        <div class="mb-3 w-100">
                            <label for="password" class="form-label">
                                {{ 'user_delete.password_label'|trans }}
                            </label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="password"
                                   required
                                   placeholder="{{ 'user_delete.password_placeholder'|trans }}">
                        </div>

                        <div class="d-grid gap-2 col-12 col-md-6 mt-3">
                            <button type="submit" class="btn btn-danger btn-lg">
                                {{ 'user_delete.submit'|trans }}
                            </button>
                            <a href="{{ path('app_user_show') }}" class="btn btn-secondary btn-lg">
                                {{ 'user_delete.cancel'|trans }}
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
