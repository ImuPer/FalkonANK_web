{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user_edit.title'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Container principal */
        .user-edit-wrapper {
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .user-edit-card {
            background: #ffffff;
            max-width: 520px;
            width: 100%;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .user-edit-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .user-edit-header h1 {
            font-size: 1.8rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .btn-voltar {
            font-size: 0.9rem;
            color: #6c757d;
            text-decoration: none;
        }

        .btn-voltar:hover {
            text-decoration: underline;
        }

        .user-edit-card hr {
            margin: 1.5rem 0;
        }

        /* Formulaire */
        .user-edit-form .form-group {
            margin-bottom: 1.2rem;
        }

        .user-edit-form label {
            font-weight: 500;
            margin-bottom: 0.3rem;
            display: block;
        }

        .user-edit-form input {
            width: 100%;
            padding: 0.6rem 0.75rem;
            border-radius: 6px;
            border: 1px solid #ced4da;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .user-edit-form input:focus {
            border-color: #0d6efd;
            outline: none;
            box-shadow: 0 0 0 0.15rem rgba(13,110,253,.25);
        }

        /* Bouton */
        .user-edit-form button,
        .user-edit-form input[type="submit"] {
            margin-top: 1rem;
            width: 100%;
            padding: 0.65rem;
            border-radius: 8px;
            font-weight: 600;
            background: #0d6efd;
            color: #fff;
            border: none;
            transition: background 0.2s ease;
        }

        .user-edit-form input[type="submit"]:hover {
            background: #0b5ed7;
        }

        /* Erreurs */
        .user-edit-error {
            background: #fff3cd;
            color: #856404;
            padding: 0.75rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            text-align: center;
        }

        /* Mobile */
        @media (max-width: 576px) {
            .user-edit-card {
                padding: 1.8rem 1.4rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/register.css') }}">

<div class="user-edit-wrapper">
    <div class="user-edit-card">

        <div class="user-edit-header">
            <a class="btn-voltar" href="{{ path('app_user_show') }}">
                ‚Üê {{ 'user_edit.back'|trans }}
            </a>
            <h1>{{ 'user_edit.heading'|trans }}</h1>
        </div>

        <hr>

        {% if error is defined and error is not empty %}
            <div class="user-edit-error">
                {{ error }}
            </div>
        {% endif %}

        <form class="user-edit-form"
              action="{{ path('app_user_edit', {'id': app.user.id}) }}"
              method="post">

            <div class="form-group">
                <label for="email">{{ 'user_edit.email'|trans }}</label>
                <input type="text" id="email" name="email" placeholder="{{ app.user.email }}">
            </div>

            <div class="form-group">
                <label for="firstName">{{ 'user_edit.first_name'|trans }}</label>
                <input type="text" id="firstName" name="firstName" placeholder="{{ app.user.firstName }}">
            </div>

            <div class="form-group">
                <label for="lastName">{{ 'user_edit.last_name'|trans }}</label>
                <input type="text" id="lastName" name="lastName" placeholder="{{ app.user.lastName }}">
            </div>

            <div class="form-group">
                <label for="adress">{{ 'user_edit.address'|trans }}</label>
                <input type="text" id="adress" name="adress" placeholder="{{ app.user.adress }}">
            </div>

            <input type="submit" value="{{ 'user_edit.submit'|trans }}">
        </form>

    </div>
</div>
{% endblock %}
