{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title'|trans }}{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/profil.css') }}">

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <a href="{{ path('app_home_page') }}">
            <button type="button" class="btn btn-dark">{{ 'profile.button.back_to_shop'|trans }}</button>
        </a>
        <div class="col-lg-8 col-md-10 col-sm-12">
            <h3 class="mb-4">{{ 'profile.personal_data'|trans }}</h3>

            <div class="table-responsive">
                <table class="table table-light">
                    <tbody>
                        <tr>
                            <th>{{ 'profile.email'|trans }}</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'profile.name'|trans }}</th>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'profile.address'|trans }}</th>
                            <td>{{ user.adress }}</td>
                        </tr>
                        <tr>
                            <th>
                                <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': app.user.id}) }}">
                                    {{ 'profile.button.edit'|trans }}
                                </a>
                            </th>
                            <td class="text-danger">
                                {{ include('user/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            {% if message is defined and message is not empty %}
                <div class="alert alert-success">{{ message }}</div>
            {% endif %}

            {% if is_granted('ROLE_MERCHANT') and (shops is not defined or shops != []) %}
                <a href="{{ path('admin') }}" class="btn btn-primary mb-3">{{ 'profile.button.merchant'|trans }}</a>
            {% endif %}

            <div class="mt-4">
                {% if merchant is null and not is_granted('ROLE_MERCHANT') %}
                    <!-- IcÃ´ne Marchand -->
                    <span class="icon-merchant" title="{{ 'profile.become_merchant'|trans }}">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#merchantModal" title="{{ 'profile.become_merchant'|trans }}">
                            <i class="fas fa-store fa-2x text-primary"></i>
                        </a>
                    </span>

                    <!-- Modal -->
                    <div class="modal fade" id="merchantModal" tabindex="-1" aria-labelledby="merchantModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="merchantModalLabel">{{ 'profile.become_merchant'|trans }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'profile.button.close'|trans }}"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="{{ path('merchant_register') }}" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="city" class="form-label">{{ 'profile.city'|trans }}</label>
                                            <select class="form-select border" id="city" name="city_id" required>
                                                <option value="">{{ 'profile.select_city'|trans }}</option>
                                                {% for city in cities %}
                                                    <option value="{{ city.id }}">{{ city.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="shopName" class="form-label">{{ 'profile.shop_name'|trans }}</label>
                                            <input type="text" class="form-control border" id="shopName" name="shop_name" placeholder="{{ 'profile.shop_name_placeholder'|trans }}" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="shopAddress" class="form-label">{{ 'profile.shop_address'|trans }}</label>
                                            <input type="text" class="form-control border" id="shopAddress" name="shop_address" placeholder="{{ 'profile.shop_address_placeholder'|trans }}" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="merchantNif" class="form-label">{{ 'profile.merchant_nif'|trans }}</label>
                                            <input type="text" class="form-control border" id="merchantNif" name="merchant_nif" placeholder="Ex: 123456789" required pattern="^[1235]\d{8}$" maxlength="9" title="{{ 'profile.nif_title'|trans }}">
                                            <div class="form-text text-muted small" style="font-size: 0.75em;">
                                                {{ 'profile.nif_hint'|trans }}
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="shopLicense" class="form-label">{{ 'profile.shop_license'|trans }}</label>
                                            <input type="file" class="form-control border" id="shopLicense" name="shop_license" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="shopDescription" class="form-label">{{ 'profile.shop_description'|trans }}</label>
                                            <textarea class="form-control border" id="shopDescription" name="shop_description" rows="4" placeholder="{{ 'profile.shop_description_placeholder'|trans }}"></textarea>
                                        </div>

                                        <h5 class="mt-4">{{ 'profile.bank_info'|trans }}</h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="bankHolder" class="form-label">{{ 'profile.bank_holder'|trans }}</label>
                                                <input type="text" class="form-control border" id="bankHolder" name="bank_holder" placeholder="{{ 'profile.bank_holder_placeholder'|trans }}" required>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="bankName" class="form-label">{{ 'profile.bank_name'|trans }}</label>
                                                <input type="text" class="form-control border" id="bankName" name="bank_name" placeholder="{{ 'profile.bank_name_placeholder'|trans }}" required>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="bankIban" class="form-label">{{ 'profile.bank_iban'|trans }}</label>
                                                <input type="text" class="form-control border" id="bankIban" name="bank_iban" required pattern="^CV\d{23}$" maxlength="25" placeholder="Ex: CV64000500000020108215144">
                                                <div class="form-text text-muted small" style="font-size: 0.75em;">
                                                    {{ 'profile.iban_hint'|trans }}
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="bankSwift" class="form-label">{{ 'profile.bank_swift'|trans }}</label>
                                                <input type="text" class="form-control border" id="bankSwift" name="bank_swift" required pattern="[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?" maxlength="11" placeholder="Ex: BCVVCVCV">
                                                <div class="form-text text-muted small" style="font-size: 0.75em;">
                                                    {{ 'profile.swift_hint'|trans }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="bankCountry" class="form-label">{{ 'profile.bank_country'|trans }}</label>
                                            <input type="text" class="form-control border" id="bankCountry" name="bank_country" placeholder="{{ 'profile.bank_country_placeholder'|trans }}" required>
                                        </div>

                                        <div class="form-check mt-3">
                                            <input class="form-check-input" type="checkbox" id="contractAgree" name="contract_agree" required>
                                            <label class="form-check-label" for="contractAgree">
                                                <a href="#" onclick="openContractPopup()" target="_blank">{{ 'profile.contract_agree'|trans }}</a>
                                            </label>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'profile.button.cancel'|trans }}</button>
                                            <button type="submit" class="btn btn-primary">{{ 'profile.button.submit'|trans }}</button>
                                        </div>
                                    </form>
                                </div>

                                <script>
                                    function openContractPopup() {
                                        const name = encodeURIComponent(document.getElementById('bankHolder').value);
                                        const address = encodeURIComponent(document.getElementById('shopAddress').value);
                                        const nif = encodeURIComponent(document.getElementById('merchantNif').value);
                                        const baseUrl = "{{ path('merchant_contract') }}";
                                        const url = `${baseUrl}?name=${name}&address=${address}&nif=${nif}`;
                                        window.open(url, '_blank');
                                    }
                                </script>
                            </div>
                        </div>
                    </div>

                {% elseif merchant is not null and merchant.isApproved is defined and merchant.isApproved == false and merchant.reponse is null %}
                    <div class="alert alert-info">
                        <strong>{{ 'profile.merchant_pending'|trans }}</strong>
                        <hr>
                        <p><strong>{{ 'profile.shop_name'|trans }} :</strong> {{ merchant.name }}</p>
                        <p><strong>{{ 'profile.city'|trans }} :</strong> {{ merchant.city.name }}</p>
                        <p><strong>{{ 'profile.shop_address'|trans }} :</strong> {{ merchant.address }}</p>
                        <p><strong>{{ 'profile.shop_description'|trans }} :</strong> {{ merchant.description }}</p>
                        <p><strong>{{ 'profile.submission_date'|trans }} :</strong> {{ merchant.createdAt|date('d/m/Y H:i') }}</p>
                        <p><strong>{{ 'profile.shop_license'|trans }} :</strong>
                            <a href="{{ asset('/' ~ merchant.licenseFile) }}" target="_blank">{{ 'profile.view_file'|trans }}</a>
                        </p>
                        <hr>
                        <h5>{{ 'profile.bank_info'|trans }}</h5>
                        <p><strong>{{ 'profile.bank_holder'|trans }}:</strong> {{ merchant.bankHolder }}</p>
                        <p><strong>{{ 'profile.bank_name'|trans }}:</strong> {{ merchant.bankName }}</p>
                        <p><strong>{{ 'profile.bank_iban'|trans }}:</strong> {{ merchant.iban }}</p>
                        <p><strong>{{ 'profile.bank_swift'|trans }}:</strong> {{ merchant.swift }}</p>
                        <p><strong>{{ 'profile.merchant_nif'|trans }}:</strong> {{ merchant.nifManeger }}</p>
                        <p>
                            <a class="btn btn-warning mt-2" href="{{ path('merchant_edit', {'id': merchant.id}) }}">
                                {{ 'profile.button.edit_shop'|trans }}
                            </a>
                        </p>
                    </div>

                {% elseif merchant is not null and merchant.isApproved is defined and merchant.isApproved == false and merchant.reponse is not null %}
                    <div class="alert alert-danger">
                        <strong>{{ 'profile.merchant_denied'|trans }}</strong>
                        <p><strong>{{ 'profile.reason'|trans }} :</strong> {{ merchant.reponse }}</p>
                        <hr>
                        <p>{{ 'profile.more_info'|trans }} :</p>
                        <a href="{{ path('contact_nous') }}">
                            <button class="btn btn-primary">{{ 'profile.button.contact_us'|trans }}</button>
                        </a>
                    </div>

                {% elseif merchant is not null and merchant.isApproved is defined and merchant.isApproved == true %}
                    <div class="alert alert-success">
                        <strong>{{ 'profile.merchant_approved'|trans }}</strong>
                        {% if merchant.reponse is not null %}
                            <p><strong>{{ 'profile.admin_message'|trans }} :</strong> {{ merchant.reponse }}</p>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
</div>
{% endblock %}
