{# templates/imuvideos.html.twig #}
{% extends 'base.html.twig' %}
{% trans_default_domain 'messages' %}

{% block title %}Imuhotepu-Videos{% endblock %}

{% block stylesheets %}
  <style>
    .screenshots {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 15px;
    }

    .screenshot {
      width: 120px;
      height: auto;
      border-radius: 6px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
      object-fit: cover;
    }

    @media (max-width: 600px) {
      .screenshot {
        width: 80px;
      }
    }
  </style>
{% endblock %}



{% block body %}
<div class="container">
  <h1>
    Imuhotepuâ€‘Videos
    <a href="/downloads/imuhotepuvideos/app-imuhotepu-videos.apk" download
       style="display:inline-flex;align-items:center;justify-content:center;
              border:2px solid #4CAF50;border-radius:8px;padding:6px 10px;
              background-color:#f9fff9;color:#333;text-decoration:none;
              font-weight:500;transition:0.3s;">
      <img class="logo" src="{{ asset('image/icon/appstore.png') }}" alt="Logo Imuhotepu" style="width:25px;height:25px;margin-right:8px;">
      {{ 'download_apk'|trans }}
    </a>
  </h1>

  <p><strong>{{ 'play_store'|trans }}</strong>
     <a href="https://play.google.com/store/apps/details?id=com.TechDevnius.imuhotepuvideos">
       (Imuhotepuvideos)
     </a>
  </p>

  <img src="{{ asset('image/imuvideos/banner.png') }}" alt="{{ 'app_banner'|trans }}" class="main-image">

  <div class="screenshots">
    {% for capture in captures %}
      <img src="{{ asset('image/imuvideos/captures/' ~ capture) }}" alt="{{ 'screenshot'|trans({'#': loop.index}) }}" class="screenshot">
    {% endfor %}
  </div>

  <div class="description">
    <p>
      <strong>{{ 'app_name'|trans }}</strong>
      {{ 'app_description'|trans }}
    </p>
  </div>
</div>
{% endblock %}
