{% extends 'base.html.twig' %}

{% block title %}Redefinir sua senha
{% endblock %}

{% block body %}
	<div class="container mt-5">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger text-center mx-auto" style="max-width: 400px;" role="alert">
				{{ flash_error }}
			</div>
		{% endfor %}


		<h1 class="mb-4 text-center">Redefinir sua senha</h1>

		<div class="row justify-content-center">
			<div class="col-md-6 col-sm-12">
				{{ form_start(requestForm) }}
				<div class="mb-3">
					{{ form_label(requestForm.email, null, { 'label_attr': {'class': 'form-label'} }) }}
					{{ form_widget(requestForm.email, { 'attr': {'class': 'form-control'} }) }}
					<small class="form-text text-muted">
						Digite seu endere√ßo de e-mail e enviaremos um
						        link para redefinir sua senha.
					</small>
				</div>


				<button class="btn btn-primary w-100">Enviar e-mail
				</button>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</div>
{% endblock %}
