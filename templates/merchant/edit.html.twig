{% extends 'base.html.twig' %}

{% block title %}Editar Loja{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h2>Editar Dados da Loja</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.name, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.city, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.address, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.description, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.licenseFile, {'attr': {'class': 'form-control mb-4'}}) }}
                            {# bank infos #}
                            {{ form_row(form.bankHolder, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.bankName, {'attr': {'class': 'form-control mb-3'}}) }}
                            {{ form_row(form.iban, {'attr': {'class': 'form-control mb-3'}}) }}
                            <br>
                            {{ form_row(form.swift, {'attr': {'class': 'form-control mb-3'}}) }}
                            <br>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success px-5">
                                    {{ button_label|default('Atualizar') }}
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('user_dashboard') }}" class="btn btn-secondary">Voltar ao Perfil</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
