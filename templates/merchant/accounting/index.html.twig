{% extends 'base.html.twig' %}

{% block title %}{{ 'accounting.title'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if isAdmin %}
        <h1 class="mb-4"> {{ 'accounting.all_shops'|trans }}</h1>
    {% else %}
        <h1 class="mb-4"> {{ 'accounting.your_shop'|trans }}</h1>
    {% endif %}

    <h2> {{ 'accounting.monthly_revenue'|trans }}</h2>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'accounting.month'|trans }}</th>
                    <th>{{ 'accounting.revenue'|trans }} (CVE)</th>
                    {% if isAdmin %}
                        <th>{{ 'accounting.commission'|trans }}</th>
                        <th>{{ 'accounting.final_price'|trans }}</th>
                    {% endif %}
                    <th>{{ 'accounting.refund'|trans }} (CVE)</th>
                    <th>{{ 'accounting.shop_name'|trans }}</th>
                    <th>{{ 'accounting.shop_email'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for row in monthlyRevenue %}
                    <tr class="clickable-row" style="cursor: pointer;" onclick="window.location.href='{{ path('orders_shop', {'id': row.shop_id}) }}'">
                        <td>{{ row.month }}</td>
                        <td>{{ (row.revenue / 100)|number_format(0, ',', ' ') }} escudos</td>
                        {% if isAdmin and row.commission %}
                            <td>{{ (row.commission / 100)|number_format(0, ',', ' ') }}</td>
                            <td>{{ ((row.revenue + row.commission) / 100)|number_format(0, ',', ' ') }}</td>
                        {% endif %}
                        <td>{{ (row.refund_amount / 100)|number_format(0, ',', ' ') }} escudos</td>
                        <td>{{ row.shop_name }}</td>
                        <td>{{ row.shop_email }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">{{ 'accounting.no_data'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h2> {{ 'accounting.product_revenue'|trans }}</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'accounting.product'|trans }}</th>
                    <th>{{ 'accounting.revenue'|trans }} (CVE)</th>
                    <th>{{ 'accounting.refund'|trans }} (CVE)</th>
                    <th>{{ 'accounting.shop_name'|trans }}</th>
                    <th>{{ 'accounting.shop_email'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for row in productRevenue %}
                    <tr>
                        <td>{{ row.product }}</td>
                        <td>{{ (row.revenue / 100)|number_format(0, ',', ' ') }} escudos</td>
                        <td>{{ (row.refund_amount / 100)|number_format(0, ',', ' ') }} escudos</td>
                        <td>{{ row.shop_name }}</td>
                        <td>{{ row.shop_email }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'accounting.no_data'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h2> {{ 'accounting.category_revenue'|trans }}</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'accounting.category'|trans }}</th>
                    <th>{{ 'accounting.revenue'|trans }} (CVE)</th>
                    <th>{{ 'accounting.refund'|trans }} (CVE)</th>
                    <th>{{ 'accounting.shop_name'|trans }}</th>
                    <th>{{ 'accounting.shop_email'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for row in categoryRevenue %}
                    <tr>
                        <td>{{ row.category }}</td>
                        <td>{{ (row.revenue / 100)|number_format(0, ',', ' ') }} escudos</td>
                        <td>{{ (row.refund_amount / 100)|number_format(0, ',', ' ') }} escudos</td>
                        <td>{{ row.shop_name }}</td>
                        <td>{{ row.shop_email }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'accounting.no_data'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
