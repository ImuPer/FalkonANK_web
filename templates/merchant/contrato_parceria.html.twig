{# {% extends 'base.html.twig' %} #}

{% block title %}
    {{ 'contract.title'|trans }}
{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">

    <h1 class="mb-4">ğŸ“„ {{ 'contract.title'|trans }}</h1>

    <p>
        <strong>{{ 'contract.number'|trans }}:</strong>
        CT-USER-{{ '%05d'|format(app.user.id) }}-{{ "now"|date("Ymd") }}
    </p>

    <p><strong>{{ 'contract.between'|trans }}:</strong></p>

    <p>
        <strong>{{ 'contract.platform'|trans }}:</strong>
        FalkonANK Alimentason
        ({{ 'contract.legal_name'|trans }}:
        <em>Pereira Mascarenhas Milton Mario</em>),
        {{ 'contract.address_platform'|trans }}
    </p>

    <p><strong>{{ 'contract.and'|trans }}:</strong></p>

    <form method="post" action="/contract/download">

        <div class="mb-3">
            <label class="form-label">{{ 'contract.merchant'|trans }} :</label>
            {{ name|e }}
            <input type="hidden" name="nomeComerciante" value="{{ name|e }}">
        </div>

        <div class="mb-3">
            <label class="form-label">{{ 'contract.nif'|trans }} :</label>
            {{ nif|e }}
            <input type="hidden" name="nifComerciante" value="{{ nif|e }}">
        </div>

        <div class="mb-3">
            <label class="form-label">{{ 'contract.address'|trans }} :</label>
            {{ address|e }}
            <input type="hidden" name="moradaComerciante" value="{{ address|e }}">
        </div>

        <div class="mb-3">
            <label class="form-label">{{ 'contract.email'|trans }} :</label>
            {{ app.user.email|e }}
            <input type="hidden" name="emailComerciante" value="{{ app.user.email|e }}">
        </div>

        <hr>

        <h3>{{ 'contract.clauses_title'|trans }}</h3>

        <p><strong>1. {{ 'contract.object.title'|trans }}:</strong>
            {{ 'contract.object.text'|trans }}
        </p>

        <p><strong>2. {{ 'contract.platform_duties.title'|trans }}:</strong>
            {{ 'contract.platform_duties.text'|trans }}
        </p>

        <p><strong>3. {{ 'contract.merchant_duties.title'|trans }}:</strong>
            {{ 'contract.merchant_duties.text'|trans }}
        </p>

        <p><strong>4. {{ 'contract.payment.title'|trans }}:</strong></p>
        <ul>
            <li>{{ 'contract.payment.1'|trans }}</li>
            <li>{{ 'contract.payment.2'|trans }}</li>
            <li>{{ 'contract.payment.3'|trans }}</li>
            <li>{{ 'contract.payment.4'|trans }}</li>
            <li>{{ 'contract.payment.5'|trans }}</li>
        </ul>

        <p><strong>5. {{ 'contract.duration.title'|trans }}:</strong>
            {{ 'contract.duration.text'|trans }}
        </p>

        <p><strong>6. {{ 'contract.liability.title'|trans }}:</strong>
            {{ 'contract.liability.text'|trans }}
        </p>

        <p><strong>7. {{ 'contract.data.title'|trans }}:</strong>
            {{ 'contract.data.text'|trans }}
        </p>

        <p><strong>8. {{ 'contract.jurisdiction.title'|trans }}:</strong>
            {{ 'contract.jurisdiction.text'|trans }}
        </p>

        <hr>

        <h4 class="mt-4">{{ 'contract.signature'|trans }}</h4>

        <p>
            <strong>{{ 'contract.date'|trans }}:</strong>
            {{ "now"|date("d/m/Y") }}
        </p>

        <p>{{ name|e }}</p>
        <hr>

        <button type="button" class="btn btn-secondary" onclick="window.close()">
            {{ 'button.ok'|trans }}
        </button>

    </form>
</div>
{% endblock %}
