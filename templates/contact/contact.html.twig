{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }}{% endblock %}

{% block body %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="{{ asset('css/header.css') }}">

	<div class="d-inline-flex p-3">
		<a href="{{ path('app_home_page') }}">
			<button type="button" class="btn btn-dark">
				{{ 'contact.back_to_shop'|trans }}
			</button>
		</a>
	</div>

	<div class="container mt-5">
		<h1 class="text-center mb-4">{{ 'contact.heading'|trans }}</h1>

		<div class="row">

			{# ---------- FORMULAIRE ---------- #}
			<div class="col-lg-6 mb-4">
				<form action="{{ path('contact_form_submit') }}" method="post">

					<div class="mb-3">
						<label for="name" class="form-label">
							{{ 'contact.form.name.label'|trans }}
						</label>
						<input type="text"
							   class="form-control"
							   id="name"
							   name="name"
							   placeholder="{{ 'contact.form.name.placeholder'|trans }}"
							   required>
					</div>

					<div class="mb-3">
						<label for="email" class="form-label">
							{{ 'contact.form.email.label'|trans }}
						</label>
						<input type="email"
							   class="form-control"
							   id="email"
							   name="email"
							   placeholder="{{ 'contact.form.email.placeholder'|trans }}"
							   required>
					</div>

					<div class="mb-3">
						<label for="subject" class="form-label">
							{{ 'contact.form.subject.label'|trans }}
						</label>
						<input type="text"
							   class="form-control"
							   id="subject"
							   name="subject"
							   placeholder="{{ 'contact.form.subject.placeholder'|trans }}"
							   required>
					</div>

					<div class="mb-3">
						<label for="message" class="form-label">
							{{ 'contact.form.message.label'|trans }}
						</label>
						<textarea class="form-control"
								  id="message"
								  name="message"
								  rows="6"
								  placeholder="{{ 'contact.form.message.placeholder'|trans }}"
								  required></textarea>
					</div>

					<button type="submit" class="btn btn-primary w-100">
						{{ 'contact.form.submit'|trans }}
					</button>
				</form>
			</div>

			{# ---------- INFOS CONTACT ---------- #}
			<div class="col-lg-6">
				<h5 class="mb-3">{{ 'contact.info.title'|trans }}</h5>

				<ul class="list-unstyled">
					<li>
						<i class="fas fa-map-marker-alt text-primary me-2"></i>
						{{ 'contact.info.address'|trans }}
					</li>
					<li>
						<i class="fas fa-envelope text-primary me-2"></i>
						{{ 'contact.info.email'|trans }}
					</li>
				</ul>

				<h5 class="mt-4 mb-3">{{ 'contact.social.title'|trans }}</h5>

				<div>
					<a href="https://www.facebook.com/profile.php?id=61577545040892&sk=about_privacy_and_legal_info"
					   class="btn btn-outline-primary btn-sm me-2">
						<i class="fab fa-facebook-f"></i>
					</a>
				</div>
			</div>

		</div>
	</div>

	<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
{% endblock %}
