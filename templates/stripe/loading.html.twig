{% extends 'base.html.twig' %}

{% block title %}
    {{ 'payment.processing.title'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f9f9f9;
        }

        .spinner {
            width: 80px;
            height: 80px;
            margin: 50px auto;
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        p {
            text-align: center;
            font-size: 18px;
            color: #555;
        }

        .advertisement {
            width: 100%;
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            background-color: #f1f1f1;
        }

        @media (max-width: 600px) {
            .spinner {
                width: 60px;
                height: 60px;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        setTimeout(() => {
            window.location.href = "/success/final?id_sessions={{ id_sessions }}";
        }, 1000);
    </script>
{% endblock %}

{% block body %}
    <div class="spinner"></div>

    <p>{{ 'payment.processing.message'|trans }}</p>

    <div class="advertisement">
        <p>{{ 'payment.processing.thanks'|trans }}</p>
        <p>{{ 'payment.processing.amazon_books'|trans }}</p>

        <a href="https://www.amazon.fr/stores/To-Imuhotepu/author/B0DQPK6XMM"
           target="_blank">
            <img src="https://falkon.click/image/slideShow/falkon.jpg/600x100/3498db/ffffff?text=To+Imuhotepu"
                 alt="To Imuhotepu">
        </a>
    </div>
{% endblock %}
